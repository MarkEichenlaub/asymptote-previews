real x = 0;
unitsize(10mm);
pen dp=black+2;
dot((0+x,0),2dp);
draw(circle((0+x,0),1));
draw((0+x,2)--(0+x,0),dp);
draw((1+x,0)--(1+x,-2.5));
draw((-1+x,0)--(-1+x,-2.5));
draw((.5+x,-2.5)--(1.5+x,-2.5)--(1.5+x,-3)--(.5+x,-3)--cycle);
draw((-.5+x,-2.5)--(-1.5+x,-2.5)--(-1.5+x,-3)--(-.5+x,-3)--cycle);
label("$10\mathrm{~kg}$", (1+x,-2.75));
label("$? \mathrm{~kg}$", (-1+x,-2.75));